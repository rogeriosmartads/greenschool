
<%- model_class = Teamdisc -%>

                <div class="row bg-title">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title">Teamdisc</h4> </div>
                    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                        <ol class="breadcrumb">
                            <li><a href="/welcome/index?other=clique">Dashboard</a></li>
                            <li class="active"><a href="/teamdiscs">Teamdiscs</a></li>
                        </ol>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /row -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="white-box">
                            <h3 class="box-title m-b-0">Listagem de todos as Turmadisciplinas da plataforma.</h3>
                            <% if Teamdisc.count==1 %> 
                             <p class="text-muted m-b-30"><%=Teamdisc.count%> registro</p>
                            <% else %> 
                             <p class="text-muted m-b-30"><%=Teamdisc.count%> registros</p>
                            <% end %> 
                            
                            <div class="form-inline padding-bottom-15">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <%= link_to t('.new', :default => t("helpers.links.new")),
                                            new_teamdisc_path,
                                            :class => 'btn btn-primary btn-sm' %>    
                                            
                                        </div>
                                    </div>
                                </div>
                                
                                
                                
                            
                            <div class="table-responsive">
                                <table id="myTable" class="table table-striped">
                                <thead>
                                  <tr>
                                  <th>Team</th>
                                  <th>Discipline</th> 
                                  <th> Ano</th>
                                   <th><%=t '.actions', :default => t("helpers.actions") %></th>
                                  </tr>
                                </thead>
                                <tbody>
                                <% @teamdiscs.each do |teamdisc| %>
                                  <tr>
                                  <td><%= teamdisc.team.description %></td>
                                  <td><%= teamdisc.discipline.description %></td>
                                  <td><%= teamdisc.team.year %></td>
                          
                                    <td>
                                    <%= link_to t('.show', :default => t("helpers.links.show")),
                                   teamdisc_path(teamdisc), :class => 'btn btn-default btn-sm' %>
                                       
                                    </td>
                                  </tr>
                                  <div id="current_teamdisc"> </div>
                                <% end %>
                              </tbody>
                            </table>
                            
                    </div>
                </div>
            </div>
         </div>   
                
<%= will_paginate @teamdiscs %>




<div>
	<h4> Import that data! </h4>
		<%= form_tag import_teamdiscs_path, multipart: true do %>
		<%= file_field_tag :file %>
		<%= submit_tag "Import CSV" %>
		<% end %> 
</div>



