            <th>Total Faltas</th>
            <th>Resultado</th>
        </tr>
    </thead>
    <tbody>
       <%  @notefrequencies.each do |notefrequency| %>
          <tr><td><%= notefrequency.disc_desc %></td> 
              <td><strong><%=notefrequency.f1bnota %></strong> | <%=notefrequency.f1brec %> | <%=notefrequency.f1bfreq%> </td>
